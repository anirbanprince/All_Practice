<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_News_Details"

    >


    <RelativeLayout
        android:id="@+id/layCover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/seo_expert"
            />

        <TextView
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CQ Business Management Lifetime Deal (LTD) Software Review!"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="#000000"
            android:gravity="start"
            android:textSize="18sp"
            />




    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layCover"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CQ Business Management Lifetime Deal (LTD) Software Review!"
                android:textStyle="bold"
                android:maxLines="1"
                android:background="#8B000000"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="15sp"
                />






        </LinearLayout>


    </ScrollView>





</RelativeLayout>